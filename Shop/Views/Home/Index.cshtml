@{
    ViewBag.Title = "Home Page";
}
@model  Shop.Models.HomeViewModel
<div class="jumbotron jumbotron-transparent">
    <ul>
        @if (Model.News.Count() == 0)
        {
            <b>Brak wiadomosci!</b>
        }
        else
        {
            foreach (var item in Model.News)
            {
                <li>
                    <div class="panel panel-info">
                        <b>@item.Title</b>
                    </div>
                    <div class="panel-body">
                        <b>@item.Content</b>
                    </div>
                    <div>
                        @if (@item.ImgFilename != null)
                        {
                            <img src="@Url.Content(@item.ImgFilename)" alt="img" />
                        }

                    </div>
                </li>
            }
        }

    </ul>

</div>