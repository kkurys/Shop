@model IEnumerable<Shop.Models.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Aktualności</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImgFilename)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            <img src="@Url.Content(item.ImgFilename)" height="64px" width="64px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.NewsID }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.NewsID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.NewsID })
        </td>
    </tr>
}
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>
            @Html.ActionLink("Dodaj nową", "Create")
        </td>
    </tr>
</table>
