@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section menu{}
@if (User.IsInRole("Employee"))
{
    <div class="col-md-3">
        <div class="list-group" style="margin-top: 25px">
            @Html.ActionLink("Aktualności", "News", "Admin", routeValues: null, htmlAttributes: new { @class = "list-group-item" })
            @Html.ActionLink("Kategorie produktów", "Category", "Admin", routeValues: null, htmlAttributes: new { @class = "list-group-item" })
            @Html.ActionLink("Producenci", "Manufacturer", "Admin", routeValues: null, htmlAttributes: new { @class = "list-group-item" })
            @Html.ActionLink("Produkty", "Product", "Admin", routeValues: null, htmlAttributes: new { @class = "list-group-item" })
            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink("Pracownicy", "Employee", "Admin", routeValues: null, htmlAttributes: new { @class = "list-group-item" })
                @Html.ActionLink("Sklepy", "ShopLocation", "Admin", routeValues: null, htmlAttributes: new { @class = "list-group-item" })
            }

        </div>
    </div>
}


<div class="col-md-9">
    @RenderBody()
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
