@model IEnumerable<Shop.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Kategorie</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BaseCategory.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BaseCategory.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.CategoryID }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.CategoryID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.CategoryID })
        </td>
    </tr>
}
    <tr>
        <td></td>
        <td></td>
        <td>
            @Html.ActionLink("Dodaj nową", "Create")
        </td>
    </tr>
</table>
